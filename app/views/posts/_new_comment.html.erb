<ul>
  <% comments.each do |comment| %>
    <li>
      <span><%= comment.user.name  %>:  </span>
      <span><%= comment.text %> </span>
    </li>
  </ul>
  <%# Delete comment %>
  <% if can? :destroy, comment %>

    <div>
      <%= button_to "Delete", comment_path(comment.id), data: { confirm: 'Are you sure you want to delete this comment?' }, method: :delete %>
    </div>

  <% end %>
<% end %>